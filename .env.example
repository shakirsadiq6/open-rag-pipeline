# Open RAG Pipeline Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Embedding Provider Configuration
# =============================================================================
# Options: openai, cohere, local
EMBEDDING_PROVIDER=openai

# OpenAI Configuration (required if EMBEDDING_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Cohere Configuration (required if EMBEDDING_PROVIDER=cohere)
COHERE_API_KEY=your_cohere_api_key_here

# Local Embedding Configuration (used if EMBEDDING_PROVIDER=local)
# Popular models: sentence-transformers/all-MiniLM-L6-v2, sentence-transformers/all-mpnet-base-v2
LOCAL_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# Vector Store Configuration
# =============================================================================
# Options: milvus, chroma, qdrant
VECTOR_STORE=milvus

# Milvus Configuration (used if VECTOR_STORE=milvus)
# For Milvus Lite (local file-based): ./milvus_demo.db
# For Milvus Server: http://localhost:19530
# For Zilliz Cloud: https://your-endpoint.zillizcloud.com
MILVUS_URI=./milvus_demo.db
MILVUS_TOKEN=
MILVUS_COLLECTION_NAME=

# Chroma Configuration (used if VECTOR_STORE=chroma)
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Qdrant Configuration (used if VECTOR_STORE=qdrant)
# For local Qdrant: http://localhost:6333
# For Qdrant Cloud: https://your-cluster.qdrant.io
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# =============================================================================
# Chunking Configuration
# =============================================================================
# Target chunk size in characters
DEFAULT_CHUNK_SIZE=1000

# Overlap between chunks in characters
DEFAULT_CHUNK_OVERLAP=200

# =============================================================================
# Batch Processing Configuration
# =============================================================================
# Number of documents to process in each batch
DEFAULT_BATCH_SIZE=100
